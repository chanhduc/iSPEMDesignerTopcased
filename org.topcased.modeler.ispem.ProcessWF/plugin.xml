<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension point="org.topcased.modeler.templates">
      <template
            di="templates/org.topcased.modeler.ispem.ProcessWF/%name%.ispemdi"
            model="templates/org.topcased.modeler.ispem.ProcessWF/%name%.ispem"
            name="ProcessWorkflow"
            id="org.topcased.modeler.ispem.ProcessWF.templates.org.topcased.modeler.ispem.ProcessWF"
            editorId="org.topcased.modeler.ispem.editor.IspemEditor"/>
   </extension>
   
   <extension point="org.topcased.modeler.diagrams">
      <diagram
            configuration="org.topcased.modeler.ispem.ProcessWF.ProcessWFConfiguration"
            id="org.topcased.modeler.ispem.ProcessWF"
            name="ProcessWorkflow">
         <enableFor class="org.topcased.ispem.Process"/>
      </diagram>
	</extension>
	
	
	<extension
       point="org.topcased.modeler.topcasedPreferenceInitializer">
    <preferenceInitializer
          class="org.topcased.modeler.ispem.ProcessWF.preferences.ProcessWFDiagramTopcasedPreferenceInitializer"
          editorId="org.topcased.modeler.ispem.editor.IspemEditor"
          id="org.topcased.modeler.ispem.ProcessWF.preferences.ProcessWFTopcasedPreferenceInitializer">
    </preferenceInitializer>
 </extension>

	<extension point="org.eclipse.ui.preferencePages">
		<page
			id="org.topcased.modeler.ispem.ProcessWF.preferences.ProcessWFDiagramPreferencePage"
			category="org.topcased.modeler.ispem.preferences.IspemPreferencePage"
			class="org.topcased.modeler.ispem.ProcessWF.preferences.ProcessWFDiagramPreferencePage"
			name="ProcessWFDiagram"/>
		<page
			id="org.topcased.modeler.ispem.ProcessWF.preferences.ActivityPreferencePage"
			category="org.topcased.modeler.ispem.ProcessWF.preferences.ProcessWFDiagramPreferencePage"
			class="org.topcased.modeler.ispem.ProcessWF.preferences.ActivityPreferencePage"
			name="Activity"/>
		<page
			id="org.topcased.modeler.ispem.ProcessWF.preferences.WorkSequencePreferencePage"
			category="org.topcased.modeler.ispem.ProcessWF.preferences.ProcessWFDiagramPreferencePage"
			class="org.topcased.modeler.ispem.ProcessWF.preferences.WorkSequencePreferencePage"
			name="WorkSequence"/>
	</extension>

	<extension point="org.eclipse.ui.propertyPages">
		<page
			id="org.topcased.modeler.ispem.ProcessWF.preferences.property.ProcessWFDiagramPreferencePage"
			category="org.topcased.modeler.ispem.preferences.property.IspemPreferencePage"
			class="org.topcased.modeler.ispem.ProcessWF.preferences.ProcessWFDiagramPreferencePage"
			name="ProcessWFDiagram">       
			<enabledWhen>
				<adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
		</page>
		
		<page
			id="org.topcased.modeler.ispem.ProcessWF.preferences.property.ActivityPreferencePage"
			category="org.topcased.modeler.ispem.ProcessWF.preferences.property.ProcessWFDiagramPreferencePage"
			class="org.topcased.modeler.ispem.ProcessWF.preferences.ActivityPreferencePage"
			name="Activity">
			<enabledWhen>
				<adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
		</page>
    	
		<page
			id="org.topcased.modeler.ispem.ProcessWF.preferences.property.WorkSequencePreferencePage"
			category="org.topcased.modeler.ispem.ProcessWF.preferences.property.ProcessWFDiagramPreferencePage"
			class="org.topcased.modeler.ispem.ProcessWF.preferences.WorkSequencePreferencePage"
			name="WorkSequence">
			<enabledWhen>
				<adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
		</page>
    	
	</extension>

</plugin>
