<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

 <plugin>

  <!-- EEF extensions -->
   <extension point="org.eclipse.emf.edit.itemProviderAdapterFactories">
      <factory
            uri="http://www.thalesgroup.com/spem/2.0/activity"
            class="org.topcased.spem.activity.providers.ActivityEEFAdapterFactory"
            supportedTypes="org.eclipse.emf.eef.runtime.providers.PropertiesEditingProvider"/>
   </extension>
   <extension
         point="org.eclipse.emf.eef.runtime.PropertiesEditionPartProvider">
      <PropertiesEditionPartProvider
            providerClass="org.topcased.spem.activity.providers.ActivityPropertiesEditionPartProvider">
      </PropertiesEditionPartProvider>
   </extension>
   <extension
         point="org.eclipse.emf.eef.runtime.PropertiesEditionPartProvider">
      <PropertiesEditionPartProvider
            providerClass="org.topcased.spem.uma.providers.UmaPropertiesEditionPartProvider">
      </PropertiesEditionPartProvider>
   </extension>
   <extension
         point="org.eclipse.emf.eef.runtime.PropertiesEditionPartProvider">
      <PropertiesEditionPartProvider
            providerClass="org.topcased.ispem.providers.IspemPropertiesEditionPartProvider">
      </PropertiesEditionPartProvider>
   </extension>
   <extension
         point="org.eclipse.emf.eef.runtime.PropertiesEditionPartProvider">
      <PropertiesEditionPartProvider
            providerClass="org.topcased.spem.providers.SpemPropertiesEditionPartProvider">
      </PropertiesEditionPartProvider>
   </extension>

  <!-- Tabbed properties views extension -->
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
      <propertyContributor
            contributorId="org.topcased.spem.activity.properties"
            labelProvider="org.eclipse.emf.eef.runtime.ui.utils.EEFLabelProvider">
         <propertyCategory
               category="default">
         </propertyCategory>
         <propertyCategory
               category="extended">
         </propertyCategory>
         <propertyCategory
               category="advanced">
         </propertyCategory>
      </propertyContributor>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
      <propertyTabs
            contributorId="org.topcased.spem.activity.properties">
         <propertyTab
               id="Base"
               label="Base"
               category="default">
         </propertyTab>

      </propertyTabs>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertySections">
      <propertySections
            contributorId="org.topcased.spem.activity.properties">
         <propertySection
               class="org.topcased.spem.activity.parts.forms.EdgePropertiesEditionPartForm"
               filter="org.topcased.spem.activity.providers.EdgePropertiesEditionProvider$EditionFilter"
               id="org.topcased.spem.activity.section.Edge"
               tab="Base">
         </propertySection>
         <propertySection
               class="org.topcased.spem.activity.parts.forms.StartNodePropertiesEditionPartForm"
               filter="org.topcased.spem.activity.providers.StartNodePropertiesEditionProvider$EditionFilter"
               id="org.topcased.spem.activity.section.StartNode"
               tab="Base">
         </propertySection>
         <propertySection
               class="org.topcased.spem.activity.parts.forms.EndNodePropertiesEditionPartForm"
               filter="org.topcased.spem.activity.providers.EndNodePropertiesEditionProvider$EditionFilter"
               id="org.topcased.spem.activity.section.EndNode"
               tab="Base">
         </propertySection>
         <propertySection
               class="org.topcased.spem.activity.parts.forms.ForkNodePropertiesEditionPartForm"
               filter="org.topcased.spem.activity.providers.ForkNodePropertiesEditionProvider$EditionFilter"
               id="org.topcased.spem.activity.section.ForkNode"
               tab="Base">
         </propertySection>
         <propertySection
               class="org.topcased.spem.activity.parts.forms.JoinNodePropertiesEditionPartForm"
               filter="org.topcased.spem.activity.providers.JoinNodePropertiesEditionProvider$EditionFilter"
               id="org.topcased.spem.activity.section.JoinNode"
               tab="Base">
         </propertySection>
         <propertySection
               class="org.topcased.spem.activity.parts.forms.DecisionNodePropertiesEditionPartForm"
               filter="org.topcased.spem.activity.providers.DecisionNodePropertiesEditionProvider$EditionFilter"
               id="org.topcased.spem.activity.section.DecisionNode"
               tab="Base">
         </propertySection>
      </propertySections>
   </extension>
 </plugin>
